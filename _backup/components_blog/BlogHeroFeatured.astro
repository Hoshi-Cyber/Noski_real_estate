---
const { entry } = Astro.props; // Astro Content blog entry
if (!entry) throw new Error('BlogHeroFeatured requires { entry }');
const { title, description, heroImage, category } = entry.data;
const href = `/blog/${entry.slug}`;
---
<article class="relative rounded-2xl overflow-hidden bg-neutral-900 text-white">
  {heroImage && (
    <img src={heroImage} alt={title} class="w-full h-64 sm:h-80 object-cover opacity-90" loading="lazy" />
  )}
  <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
  <div class="absolute inset-x-0 bottom-0 p-4 sm:p-6">
    {category && <span class="text-xs mb-1 inline-block rounded-full bg-white/15 px-2 py-0.5">{category}</span>}
    <h2 class="text-xl sm:text-2xl font-bold">{title}</h2>
    {description && <p class="mt-1 text-sm sm:text-base text-white/90 line-clamp-2">{description}</p>}
    <a href={href} class="mt-3 inline-block rounded-md bg-[color:var(--color-cta)] text-white px-3 py-2 text-sm">Read story</a>
  </div>
</article>
