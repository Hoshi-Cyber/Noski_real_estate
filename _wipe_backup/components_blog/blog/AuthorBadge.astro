---
interface Props { name: string; role?: string; avatar?: string; }
const { name, role = 'Author', avatar } = Astro.props as Props;
const initials = name.split(' ').map(p => p[0]).slice(0,2).join('').toUpperCase();
---
<div class="flex items-center gap-3">
  <div class="w-9 h-9 rounded-full overflow-hidden bg-neutral-200 flex items-center justify-center text-xs font-semibold text-neutral-700">
    {avatar ? <img src={avatar} alt={name} class="w-full h-full object-cover" loading="lazy" /> : initials}
  </div>
  <div class="leading-tight">
    <div class="text-sm font-medium text-primary">{name}</div>
    <div class="text-xs text-neutral-500">{role}</div>
  </div>
</div>
