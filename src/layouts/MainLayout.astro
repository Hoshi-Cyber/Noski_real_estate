---
const { 
  title = 'Severino Realty', 
  description = 'Discover Nairobi real estate with Severino Realty', 
  seoImage 
} = Astro.props;

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {seoImage && <meta property="og:image" content={seoImage} />}
    <link rel="icon" type="image/png" href="/images/placeholder.webp" />
  </head>
  <body class="overflow-x-hidden bg-neutral-50 text-neutral-900">
    <Header />

    <!-- Main content wrapper -->
    <main class="min-h-[70vh] overflow-x-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <slot />
      </div>
    </main>

    <Footer />
  </body>
</html>
