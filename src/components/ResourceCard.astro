---
import BaseCard from './BaseCard.astro';

export interface Props {
  resource: {
    title: string;
    description?: string;
    heroImage?: string;
    slug?: string;
    pubDate?: string | Date;
    highlight?: boolean; // NEW → allows special styling
  };
}

const { resource } = Astro.props;
const href = resource.slug ? `/resources/${resource.slug}` : `/resources`;
const img = resource.heroImage ?? '/images/placeholder.webp';
const date = resource.pubDate
  ? new Date(resource.pubDate).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  : '';
---

<BaseCard
  title={resource.title}
  desc={resource.description}
  img={img}
  href={href}
  date={date}
  tag="Resource"
  cta="Read more →"
  variant="horizontal"
  showImage={true}
  highlight={resource.highlight ?? false}
/>
