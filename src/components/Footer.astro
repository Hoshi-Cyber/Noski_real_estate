// Footer component for Severino Realty microsite.
---
<footer class="bg-primary text-neutral-100 mt-16">
  <!-- Footer top: social icons and mini CTA -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex flex-col md:flex-row md:justify-between items-center border-b border-blue-900">
    <div class="flex space-x-4 mb-4 md:mb-0">
      <a href="#" aria-label="Facebook" class="hover:text-accent focus:outline-none focus:ring-2 focus:ring-[color:var(--color-cta)] rounded">
