    <div class="text-center md:text-left">
      <p class="font-medium">Stay informed about market trends and new listings.</p>
      <a href="/blog" class="btn-cta mt-2 inline-flex rounded-md">
        Read our blog
      </a>
    </div>
  </div>

  <!-- Footer main columns -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
    <!-- Company -->
    <div>
      <h3 class="text-lg font-semibold mb-3 text-neutral-100">Company</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="/about" class="hover:text-accent">About Us</a></li>
        <li><a href="/about#mission" class="hover:text-accent">Our Mission</a></li>
        <li><a href="/testimonials" class="hover:text-accent">Testimonials</a></li>
        <li><a href="/careers" class="hover:text-accent">Careers</a></li>
        <li><a href="/press" class="hover:text-accent">Press / Media Kit</a></li>
      </ul>
    </div>

    <!-- Explore Listings -->
    <div>
      <h3 class="text-lg font-semibold mb-3 text-neutral-100">Explore Listings</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="/for-sale" class="hover:text-accent">For Sale Properties</a></li>
        <li><a href="/for-rent" class="hover:text-accent">For Rent Properties</a></li>
        <li><a href="/short-stays" class="hover:text-accent">Short Stays</a></li>
        <li><a href="/list-property" class="hover:text-accent">List Your Property</a></li>
      </ul>
    </div>

    <!-- Resources -->
    <div>
      <h3 class="text-lg font-semibold mb-3 text-neutral-100">Resources</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="/resources/guides" class="hover:text-accent">Guides</a></li>
        <li><a href="/resources/faqs" class="hover:text-accent">FAQs</a></li>
        <li><a href="/resources/market-reports" class="hover:text-accent">Market Reports</a></li>
        <li><a href="/blog" class="hover:text-accent">Blog</a></li>
      </ul>
    </div>

    <!-- Support & Contact -->
    <div>
      <h3 class="text-lg font-semibold mb-3 text-neutral-100">Support & Contact</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="/contact" class="hover:text-accent">Contact Us</a></li>
        <li><a href="/privacy" class="hover:text-accent">Privacy Policy</a></li>
        <li><a href="/terms" class="hover:text-accent">Terms & Conditions</a></li>
        <li><a href="/sitemap" class="hover:text-accent">Sitemap</a></li>
      </ul>
    </div>
  </div>

  <!-- Footer bottom -->
  <div class="bg-primary border-t border-blue-900 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col sm:flex-row justify-between items-center text-xs">
      <p>Â© 2025 Severino Realty. All rights reserved.</p>
      <p>Made by Mezame</p>
    </div>
  </div>
</footer>
