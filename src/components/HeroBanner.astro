---
export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  img?: string;
}

const { title, subtitle, ctaText, ctaLink, img } = Astro.props;
---

<section class="relative bg-neutral-50">
  <div class="grid lg:grid-cols-2 gap-6 items-center py-6 sm:py-8 lg:py-10 px-4 sm:px-6 lg:px-12">
    <!-- Text Content -->
    <div class="text-center lg:text-left">
      <h1 class="text-3xl font-bold tracking-tight sm:text-4xl text-primary leading-tight">
        {title}
      </h1>

      {subtitle && (
        <p class="mt-2 sm:mt-3 text-base sm:text-lg text-neutral-600 max-w-xl mx-auto lg:mx-0">
          {subtitle}
        </p>
      )}

      {ctaText && ctaLink && (
        <div class="mt-6 sm:mt-8">
          <a
            href={ctaLink}
            class="btn-cta rounded-full"
          >
            {ctaText}
          </a>
        </div>
      )}
    </div>

    <!-- Image Content -->
    {img && (
      <div class="relative">
        <img
          src={img}
          alt={title}
          class="rounded-none lg:rounded-xl shadow-md w-full h-auto max-h-[280px] sm:max-h-[340px] lg:max-h-[380px] object-cover"
          loading="lazy"
          decoding="async"
          fetchpriority="high"
        />
      </div>
    )}
  </div>
</section>
