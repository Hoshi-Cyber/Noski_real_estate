---
import MainLayout from '../../../../layouts/MainLayout.astro';
import GuideDetail from '../../../../components/resources/GuideDetail.astro';
import Breadcrumbs from '../../../../components/resources/Breadcrumbs.astro';

const title = 'Selling Guide | Severino Realty';
const description = 'Pricing, prep, marketing, offers, and closing with tight execution.';

const steps = [
  {
    id: 'assess',
    heading: 'Property Assessment & Pricing Strategy',
    bodyHtml: '<p>Define target buyer, comps, and pricing band. Decide between list-to-attract vs. list-to-negotiate.</p>',
  },
  {
    id: 'prep',
    heading: 'Preparation & Staging',
    bodyHtml: '<p>Fix high-ROI issues, declutter, professional staging checklist, photography brief.</p>',
  },
  {
    id: 'launch',
    heading: 'Launch & Marketing',
    bodyHtml: '<p>MLS + portals, paid boost, social reels, open houses, lead capture.</p>',
  },
  {
    id: 'offers',
    heading: 'Offers & Negotiation',
    bodyHtml: '<p>Offer matrix, terms vs. price trade-offs, counter strategy, buyer qualification.</p>',
  },
  {
    id: 'close',
    heading: 'Escrow, Legal, and Closing',
    bodyHtml: '<p>Disclosures, inspections, repairs, walkthrough, settlement statement.</p>',
  },
];

// PDF lives at /public/docs/resources/seller-prelisting-checklist.pdf -> href /docs/resources/seller-prelisting-checklist.pdf
const checklistUrl = '/docs/resources/seller-prelisting-checklist.pdf';

const related = [
  { title: 'Buying Guide',          href: '/resources/guides/buying',           desc: 'From search to ownership.' },
  { title: 'Renting & Landlord',    href: '/resources/guides/renting-landlord', desc: 'Screening, leases, compliance.' },
  { title: 'Investment',            href: '/resources/guides/investment',       desc: 'Yields, financing, exits.' },
];
---

<MainLayout {title} {description}>
  <GuideDetail
    title="Selling Guide"
    intro="End-to-end playbook to sell at speed without leaving money on the table."
    estReadMin={12}
    {steps}
    {checklistUrl}
    {related}
  >
    <Fragment slot="breadcrumbs">
      <Breadcrumbs
        items={[
          { label: 'Home', href: '/' },
          { label: 'Resources', href: '/resources' },
          { label: 'Guides', href: '/resources/guides' },
          { label: 'Selling' }
        ]}
      />
    </Fragment>
  </GuideDetail>
</MainLayout>
