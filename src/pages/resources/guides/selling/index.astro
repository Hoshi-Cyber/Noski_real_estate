---
import MainLayout from '../../../../layouts/MainLayout.astro';
import Breadcrumbs from '../../../../components/resources/Breadcrumbs.astro';

const title = 'Selling Guides | Locate Properties Kenya';
const description = 'Pricing, prep, marketing, negotiation, and closing—executed to modern standards. Jump into focused topics, download quick references, then continue to related categories.';

/** Core Selling Topics → each links to its own page */
const topics = [
  { title: 'Assessment & Pricing Strategy', href: '/resources/guides/selling/assessment-pricing', desc: 'Market intel, condition deltas, net-sheet targets.' },
  { title: 'Preparation & Staging',         href: '/resources/guides/selling/prep-staging',       desc: 'High-ROI fixes, presentation, safety checklist.' },
  { title: 'Launch & Marketing',            href: '/resources/guides/selling/launch-marketing',   desc: 'Media kit, listing accuracy, distribution, metrics.' },
  { title: 'Offers & Negotiation',          href: '/resources/guides/selling/offers',             desc: 'Verification, matrices, credits vs. repairs.' },
  { title: 'Escrow, Legal & Closing',       href: '/resources/guides/selling/closing',            desc: 'Title, appraisal, disclosures, settlement steps.' },
  { title: 'Listing Compliance & Accuracy', href: '/resources/guides/selling/listing-compliance', desc: 'Data verification, fair-housing safe language.' },
];

/** Additional concise guides (6) */
const extraGuides = [
  { label: 'Assessment & Pricing Framework (PDF)', href: '/docs/resources/assessment-pricing.pdf',           blurb: 'Comps, competition overlay, net-sheet rules.' },
  { label: 'Prep & Staging Checklist (PDF)',       href: '/docs/resources/prep-staging-checklist.pdf',       blurb: 'Exterior, interior, systems, safety.' },
  { label: 'Launch & Marketing Plan (PDF)',        href: '/docs/resources/launch-marketing-plan.pdf',        blurb: 'Media kit, distribution, paid boosts, baselines.' },
  { label: 'Offers & Negotiation Matrix (PDF)',    href: '/docs/resources/offers-negotiation-matrix.pdf',    blurb: 'Terms, contingencies, appraisal and risk flags.' },
  { label: 'Escrow & Closing Checklist (PDF)',     href: '/docs/resources/escrow-closing-checklist.pdf',     blurb: 'Deadlines, docs, wire security, walkthrough.' },
  { label: 'Seller Pre-Listing Checklist (PDF)',   href: '/docs/resources/seller-prelisting-checklist.pdf',  blurb: 'Repairs, disclosures, media, showing readiness.' },
];

/** Related categories at bottom */
const related = [
  { title: 'Buying Guides',              href: '/resources/guides/buying',           desc: 'From search to ownership.',        image: '/images/guides/buying.webp',      alt: 'Couple reviewing purchase paperwork' },
  { title: 'Renting & Landlord Guides',  href: '/resources/guides/renting-landlord', desc: 'Screening, leases, compliance.',   image: '/images/guides/renting.webp',     alt: 'Keys and lease documents' },
  { title: 'Investment Guides',          href: '/resources/guides/investment',       desc: 'Yields, financing, exits.',        image: '/images/guides/investment.webp',  alt: 'Apartment building and spreadsheet' },
];
---

<MainLayout {title} {description}>
  <section class="section container">
    <Breadcrumbs
      items={[
        { label: 'Home', href: '/' },
        { label: 'Resources', href: '/resources' },
        { label: 'Guides', href: '/resources/guides' },
        { label: 'Selling Guides' }
      ]}
      class="mb-2"
    />

    <header class="mb-5 md:mb-6">
      <h1 class="text-2xl md:text-3xl font-bold text-primary">Selling Guides</h1>
      <p class="mt-2 text-neutral-700">
        Choose a topic to go deeper. Each opens as its own page. Keep the quick PDFs handy for decisions in motion.
      </p>
    </header>

    <!-- Core Selling Topics (link-out overview, no inline steps) -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
      {topics.map((t) => (
        <a href={t.href} class="category-tile tile-accent tile-tint" aria-label={t.title}>
          <div class="tile-badge" aria-hidden="true">
            <svg class="tile-icon-svg" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor">
              <path d="M12 6v12m6-6H6" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" />
            </svg>
          </div>
          <h2 class="tile-title">{t.title}</h2>
          <p class="tile-sub">{t.desc}</p>
          <div class="mt-3"><span class="badge-cta">Open Topic</span></div>
        </a>
      ))}
    </div>
  </section>

  <!-- Additional Guides -->
  <section class="section container">
    <h2 class="text-lg md:text-xl font-bold text-primary mb-3">Additional Guides for Sellers</h2>
    <p class="text-neutral-700 text-sm md:text-base mb-3">Short, practical downloads for pricing, presentation, and clean closings.</p>

    <!-- Responsive grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
      {extraGuides.map((g) => (
        <a href={g.href} class="card p-4 hover:shadow-md transition focus:outline-none ring-focus-brand" rel="noopener">
          <div class="flex items-start gap-3">
            <span class="pdf-badge">PDF</span>
            <h3 class="text-base md:text-lg font-semibold leading-snug text-primary">{g.label}</h3>
          </div>
          <p class="mt-2 text-sm text-neutral-600">{g.blurb}</p>
          <div class="mt-3"><span class="badge-cta">Open</span></div>
        </a>
      ))}
    </div>

    <!-- Risk callout -->
    <div class="mt-6 rounded-2xl ring-1 ring-neutral-200 bg-white shadow-sm p-4">
      <p class="text-sm">
        <strong>Seller risk controls:</strong> verify buyer funds and lender, disclose known defects, confirm wire instructions by phone, and track all deadlines.
      </p>
    </div>
  </section>

  <!-- Related Guides -->
  <section class="section container">
    <h2 class="text-lg md:text-xl font-bold text-primary mb-3">Related Guides</h2>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-5">
      {related.map((r) => (
        <a href={r.href} class="category-tile tile-accent" aria-label={r.title}>
          <img src={r.image} alt={r.alt} class="w-full h-36 object-cover rounded-xl mb-3" />
          <h3 class="tile-title">{r.title}</h3>
          <p class="tile-sub">{r.desc}</p>
          <div class="mt-3"><span class="badge-cta">Open</span></div>
        </a>
      ))}
    </div>
  </section>
</MainLayout>
