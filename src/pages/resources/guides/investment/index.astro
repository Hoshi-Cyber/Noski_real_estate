---
import MainLayout from '../../../../layouts/MainLayout.astro';
import GuideDetail from '../../../../components/resources/GuideDetail.astro';
import Breadcrumbs from '../../../../components/resources/Breadcrumbs.astro';

const title = 'Investment Guide | Severino Realty';
const description = 'Criteria, underwriting, financing, asset management, and exit planning.';

const steps = [
  {
    id: 'thesis',
    heading: 'Investment Thesis & Box',
    bodyHtml: '<p>Target submarkets, asset type, risk band, min yield thresholds.</p>',
  },
  {
    id: 'source',
    heading: 'Deal Sourcing & Screening',
    bodyHtml: '<p>Broker network, off-market, pipeline hygiene, fast kill criteria.</p>',
  },
  {
    id: 'model',
    heading: 'Underwriting & Diligence',
    bodyHtml: '<p>Rent roll, T12, capex plan, DSCR, sensitivity table.</p>',
  },
  {
    id: 'finance',
    heading: 'Finance Structure',
    bodyHtml: '<p>Debt options, LTV/LTC, amortization, covenants, refinance triggers.</p>',
  },
  {
    id: 'operate',
    heading: 'Asset Management',
    bodyHtml: '<p>KPI dashboard, variance reviews, value-add execution, PM oversight.</p>',
  },
  {
    id: 'exit',
    heading: 'Hold/Exit & Tax',
    bodyHtml: '<p>IRR gates, sale prep, 1031 alternatives, timing windows.</p>',
  },
];

// PDF lives at /public/docs/resources/investment-due-diligence-checklist.pdf -> href /docs/resources/investment-due-diligence-checklist.pdf
const checklistUrl = '/docs/resources/investment-due-diligence-checklist.pdf';

const related = [
  { title: 'Buying Guide',       href: '/resources/guides/buying',           desc: 'From search to ownership.' },
  { title: 'Selling Guide',      href: '/resources/guides/selling',          desc: 'Prep, pricing, marketing, closing.' },
  { title: 'Renting & Landlord', href: '/resources/guides/renting-landlord', desc: 'Screening, leases, compliance.' },
];
---

<MainLayout {title} {description}>
  <GuideDetail
    title="Investment Guide"
    intro="From sourcing to exit with disciplined underwriting and operating control."
    estReadMin={16}
    {steps}
    {checklistUrl}
    {related}
  >
    <Fragment slot="breadcrumbs">
      <Breadcrumbs
        items={[
          { label: 'Home', href: '/' },
          { label: 'Resources', href: '/resources' },
          { label: 'Guides', href: '/resources/guides' },
          { label: 'Investment' }
        ]}
      />
    </Fragment>
  </GuideDetail>
</MainLayout>
