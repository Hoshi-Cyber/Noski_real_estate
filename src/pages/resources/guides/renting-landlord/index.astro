---
import MainLayout from '../../../../layouts/MainLayout.astro';
import GuideDetail from '../../../../components/resources/GuideDetail.astro';
import Breadcrumbs from '../../../../components/resources/Breadcrumbs.astro';

const title = 'Renting & Landlord Guide | Severino Realty';
const description = 'Acquisition-to-operations workflow for compliant and profitable rentals.';

const steps = [
  {
    id: 'ready',
    heading: 'Unit Readiness & Pricing',
    bodyHtml: '<p>Turnover checklist, rent comps, yield target, concessions policy.</p>',
  },
  {
    id: 'market',
    heading: 'Marketing & Tenant Funnel',
    bodyHtml: '<p>Listings, photos, screening form, showing cadence, lead tracking.</p>',
  },
  {
    id: 'screen',
    heading: 'Screening & Approval',
    bodyHtml: '<p>Criteria, verification, risk flags, fair-housing compliance.</p>',
  },
  {
    id: 'lease',
    heading: 'Lease & Move-in',
    bodyHtml: '<p>Deposit, inventory & condition report, utilities, key handover.</p>',
  },
  {
    id: 'ops',
    heading: 'Operations & Maintenance',
    bodyHtml: '<p>Rent collection, SLAs, vendor panel, preventive schedule.</p>',
  },
  {
    id: 'renewal',
    heading: 'Renewals & Vacancy Control',
    bodyHtml: '<p>Notice timelines, increase policy, retention offers, re-list flow.</p>',
  },
];

// PDF lives at /public/docs/resources/tenant-handover-form.pdf -> href /docs/resources/tenant-handover-form.pdf
const checklistUrl = '/docs/resources/tenant-handover-form.pdf';

const related = [
  { title: 'Buying Guide',       href: '/resources/guides/buying',  desc: 'From search to ownership.' },
  { title: 'Selling Guide',      href: '/resources/guides/selling', desc: 'Prep, pricing, marketing, closing.' },
  { title: 'Investment',         href: '/resources/guides/investment', desc: 'Yields, financing, exits.' },
];
---

<MainLayout {title} {description}>
  <GuideDetail
    title="Renting & Landlord Guide"
    intro="Simple operating system for stable tenancy, low vacancy, and fewer headaches."
    estReadMin={14}
    {steps}
    {checklistUrl}
    {related}
  >
    <Fragment slot="breadcrumbs">
      <Breadcrumbs
        items={[
          { label: 'Home', href: '/' },
          { label: 'Resources', href: '/resources' },
          { label: 'Guides', href: '/resources/guides' },
          { label: 'Renting & Landlord' }
        ]}
      />
    </Fragment>
  </GuideDetail>
</MainLayout>
