---
import MainLayout from '../layouts/MainLayout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<MainLayout
  title="Contact Us"
  description="Get in touch with Severino Realty for property inquiries, viewings, listing your property, rentals, or general questions.">

  <section class="py-12 max-w-5xl mx-auto px-4">
    <h1 class="text-3xl font-bold text-primary mb-4">Contact Us</h1>
    <p class="text-neutral-700 mb-8">
      Our team is available to assist with viewings, listings, rentals, short stays, and market insights. Send a message or use the quick actions.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      <!-- 📩 Contact Form -->
      <div>
        <ContactForm />
      </div>

      <!-- 🏢 Contact Info + Quick Actions -->
      <div class="space-y-6">
        <div>
          <h2 class="text-2xl font-semibold text-primary">Our Office</h2>
          <p class="mt-1">Severino Realty<br />Nairobi, Kenya</p>

          <p class="mt-3">
            <strong>Phone:</strong>
            <a href="tel:+254722245676" class="text-cta hover:text-accent">+254&nbsp;722&nbsp;245&nbsp;676</a>
          </p>
          <p>
            <strong>Email:</strong>
            <a href="mailto:info@severino.com" class="text-cta hover:text-accent">info@locateproperties.co.ke</a>
          </p>
          <p><strong>Hours:</strong> Mon–Fri 8:00–17:00</p>
        </div>

        <!-- 🏃 Quick contact actions -->
        <div>
          <h2 class="text-2xl font-semibold text-primary">Quick contact</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mt-3">
            <a href="https://wa.me/254700000000" class="btn-outline" rel="noopener" target="_blank">WhatsApp</a>
            <a href="mailto:info@severino.com" class="btn-outline">Email Support</a>
            <a href="tel:+254700000000" class="btn-outline">Call Us</a>
            <a href="/request-callback" class="btn-outline">Request Callback</a>
            <a href="/market-reports" class="btn-outline">Market Reports</a>
            <a href="/faqs" class="btn-outline">FAQs</a>
          </div>
          <p class="help">Prefer messaging? WhatsApp is fastest. For documents or proposals, use Email Support.</p>
        </div>

        <!-- 🔗 Social -->
<div>
  <h2 class="text-2xl font-semibold text-primary">Follow Us</h2>
  <div class="flex items-center gap-4 mt-2 text-primary">
    <!-- Facebook -->
    <a href="#" aria-label="Facebook" class="hover:text-accent">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M22 12C22 6.477 17.523 2 12 2S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.988h-2.54V12h2.54V9.797c0-2.507 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.772-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
      </svg>
    </a>

    <!-- Instagram -->
    <a href="#" aria-label="Instagram" class="hover:text-accent">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M7.5 2h9A5.5 5.5 0 0 1 22 7.5v9A5.5 5.5 0 0 1 16.5 22h-9A5.5 5.5 0 0 1 2 16.5v-9A5.5 5.5 0 0 1 7.5 2zm9 2h-9A3.5 3.5 0 0 0 4 7.5v9A3.5 3.5 0 0 0 7.5 20h9a3.5 3.5 0 0 0 3.5-3.5v-9A3.5 3.5 0 0 0 16.5 4zM12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10zm0 2a3 3 0 1 0 0 6 3 3 0 0 0 0-6zm4.75-2.25a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
      </svg>
    </a>

    <!-- X (Twitter) -->
    <a href="#" aria-label="X" class="hover:text-accent">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M3 3h3.6l5.3 7.3L16.7 3H21l-7.4 9.9L21 21h-3.6l-5.7-7.8L7.3 21H3l7.9-10.6L3 3z"/>
      </svg>
    </a>

    <!-- LinkedIn -->
    <a href="#" aria-label="LinkedIn" class="hover:text-accent">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M4.98 3.5c0 1.38-1.12 2.5-2.49 2.5A2.5 2.5 0 1 1 4.98 3.5zM3 8h4v13H3V8zm7 0h3.8v1.8h.05c.53-1 1.83-2.05 3.77-2.05 4.03 0 4.78 2.65 4.78 6.09V21h-4v-6.3c0-1.5-.03-3.43-2.09-3.43-2.09 0-2.41 1.63-2.41 3.32V21h-4V8z"/>
      </svg>
    </a>
  </div>
</div>

        <!-- 🔒 Compliance note -->
        <p class="text-xs text-neutral-500">
          By contacting us you agree to our <a class="underline" href="/privacy-policy">Privacy Policy</a> and
          <a class="underline" href="/terms">Terms &amp; Conditions</a>.
        </p>
      </div>
    </div>
  </section>

  <!-- JSON-LD: ContactPage -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "name": "Severino Realty Contact",
    "url": "https://www.severino.com/contact",
    "publisher": {
      "@type": "Organization",
      "name": "Severino Realty",
      "url": "https://www.severino.com"
    },
    "contactPoint": [{
      "@type": "ContactPoint",
      "contactType": "customer support",
      "telephone": "+254700000000",
      "email": "info@severino.com",
      "areaServed": "KE"
    }]
  }
  </script>
</MainLayout>
