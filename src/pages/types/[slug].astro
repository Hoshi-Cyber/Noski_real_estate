---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import PropertyCard from '../../components/PropertyCard.astro';

function resolveCategory(d) {
  if (d.category) return d.category.toLowerCase();
  const t = (d.type || '').toLowerCase();
  if (t.includes('land')) return 'land';
  if (
    t.includes('apartment') ||
    t.includes('townhouse') ||
    t.includes('villa') ||
    t.includes('cabin')
  )
    return 'residential';
  return 'residential';
}

export async function getStaticPaths() {
  const listings = await getCollection('listings');
  const categories = Array.from(new Set(listings.map((l) => resolveCategory(l.data)))).filter(
    Boolean
  );

  return categories.map((cat) => ({
    params: { slug: cat },
    props: { cat },
  }));
}

const { cat } = Astro.props;
const listings = await getCollection('listings');

const filtered = listings.filter((l) => resolveCategory(l.data) === cat);
---

<MainLayout title={`${cat} Properties`} description={`Browse ${cat} listings.`}>
  <section class="max-w-7xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8 capitalize">{cat} Properties</h1>

    {filtered.length > 0 ? (
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {filtered.map((listing) => (
          <PropertyCard listing={listing} />
        ))}
      </div>
    ) : (
      <p>No listings found for this category yet.</p>
    )}
  </section>
</MainLayout>
